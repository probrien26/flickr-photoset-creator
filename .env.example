FLICKR_API_KEY=your_api_key_here
FLICKR_API_SECRET=your_api_secret_here

# Web app login credentials (optional - if set, login is required)
APP_USERNAME=your_username_here
APP_PASSWORD=your_password_here

# Flickr OAuth token (for cloud deployment - run: python web_app.py --extract-token)
FLICKR_OAUTH_TOKEN=
FLICKR_OAUTH_TOKEN_SECRET=
FLICKR_USER_NSID=

# Email-based 2FA (optional - if set, a verification code is emailed after login)
# For Yahoo: generate an App Password at https://login.yahoo.com/myaccount/security
SMTP_USERNAME=your_yahoo_email@yahoo.com
SMTP_APP_PASSWORD=your_yahoo_app_password
